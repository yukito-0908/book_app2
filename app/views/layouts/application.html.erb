<!DOCTYPE html>
<html>
  <head>
    <title>BookApp2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
      <header class="shadow-sm">
        <nav class="navbar-expand-lg"style="background:black;">
          <div class="container">
            <div class="row">
              <h3 class="navbar-brand p-3 text-center" style="color:white;">Bookers</h3>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to user_path(current_user.id), method: :get do %>
                    <p class="m-2", style="color:white;"><i class="fas fa-home"></i>Home</p>
                    <% end %>
                  </li>
                    <li class="nav-item">
                      <%= link_to books_path, method: :get do %>
                      <p class="m-2", style="color:white;"><i class="fas fa-user-friends"></i></i></i>users</p>
                      <% end %>
                    </li>
                       <li class="nav-item">
                        <%= link_to users_path, method: :get do %>
                          <p class="m-2", style="color:white;"><i class="fas fa-book-open"></i>books</p>
                        <% end %>
                      </li>
                        <li class="nav-item">
                          <%= link_to destroy_user_session_path, method: :delete do %>
                          <p class="m-2", style="color:white;"><i class="fas fa-sign-out-alt"></i>logout</p>
                          <% end %>
                        </li>
                <% else %>
                  <li class="nav-item">
                    <%= link_to root_path,method: :get do %>
                    <p class="m-2", style="color:white;"><i class="fas fa-home"></i>Home</p>
                    <% end %>
                  </li>
                    <li class="nav-item">
                      <%= link_to about_path,method: :get do %>
                         <p class="m-2", style="color:white;"><i class="fas fa-link"></i>About</p>
                      <% end %>
                    </li>
                      <li class="nav-item">
                        <%= link_to new_user_registration_path,method: :get do %>
                           <p class="m-2", style="color:white;"><i class="fas fa-user-alt"></i>Sign up</p>
                        <% end %>
                      </li>
                        <li class="nav-item">
                          <%= link_to new_user_session_path, method: :get do %>
                             <p class="m-2", style="color:white;"><i class="fas fa-door-open"></i>Login</p>
                          <% end %>
                        </li>
                <% end %>
                </ul>
              </div>
            </div>
          </div>
        </nav>
    </header>
      <div class="flash-title">
         <% flash.each do |message_type, message| %>
          <%= message %>
        <% end %>
      </div>
      <%= yield %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>

